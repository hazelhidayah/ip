<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="720.0"
            prefWidth="480.0"
            style="-fx-background-color: rgb(255, 209, 220);"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="nut.MainWindow">

    <ScrollPane fx:id="scrollPane"
                fitToWidth="true"
                hbarPolicy="NEVER"
                vbarPolicy="ALWAYS"
                AnchorPane.bottomAnchor="50.0"
                AnchorPane.leftAnchor="10.0"
                AnchorPane.rightAnchor="10.0"
                AnchorPane.topAnchor="10.0">
        <VBox fx:id="dialogContainer"
              spacing="10.0" />
    </ScrollPane>

    <!-- User input text box -->
    <TextField fx:id="userInput"
               prefHeight="30.0"
               promptText="Type your message here..."
               AnchorPane.bottomAnchor="10.0"
               AnchorPane.leftAnchor="10.0"
               AnchorPane.rightAnchor="100.0"
               onAction="#handleUserInput" />

    <!-- Send Button -->
    <Button fx:id="sendButton"
            mnemonicParsing="false"
            onMouseClicked="#handleUserInput"
            prefHeight="30.0"
            prefWidth="80.0"
            text="Send"
            styleClass="font-thin"
            AnchorPane.bottomAnchor="10.0"
            AnchorPane.rightAnchor="10.0" />
</AnchorPane>