<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>


<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="720.0"
            prefWidth="480.0"
            styleClass="main-root"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="nut.gui.MainWindow">

    <MediaView fx:id="backgroundView"
               mouseTransparent="true"
               pickOnBounds="false"
               preserveRatio="false"
               AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0" />

    <Pane fx:id="ambientOverlay"
          mouseTransparent="true"
          pickOnBounds="false"
          styleClass="ambient-overlay"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0" />

    <ScrollPane fx:id="scrollPane"
                styleClass="scroll-pane"
                fitToWidth="true"
                hbarPolicy="NEVER"
                vbarPolicy="ALWAYS"
                AnchorPane.bottomAnchor="50.0"
                AnchorPane.leftAnchor="10.0"
                AnchorPane.rightAnchor="10.0"
                AnchorPane.topAnchor="10.0">
        <VBox fx:id="dialogContainer"
              styleClass="dialog-container"
              spacing="10.0" />
    </ScrollPane>

    <!-- User input text box -->
    <TextField fx:id="userInput"
               styleClass="user-input"
               prefHeight="30.0"
               promptText="Type your message here..."
               AnchorPane.bottomAnchor="10.0"
               AnchorPane.leftAnchor="10.0"
               AnchorPane.rightAnchor="100.0"
               onAction="#handleUserInput" />

    <!-- Send Button -->
    <Button fx:id="sendButton"
            mnemonicParsing="false"
            onMouseClicked="#handleUserInput"
            prefHeight="30.0"
            prefWidth="80.0"
            text="SEND"
            styleClass="send-button"
            AnchorPane.bottomAnchor="10.0"
            AnchorPane.rightAnchor="10.0" />
</AnchorPane>
